{# Skills â€” three-column typographic grid #}
{% set lang = locale | default("en") %}
{% set t = translations[lang] %}
{% if lang == "fr" %}
  {% set sk = skills_fr %}
{% elif lang == "de" %}
  {% set sk = skills_de %}
{% else %}
  {% set sk = skills %}
{% endif %}
<section class="skills section-alt" id="skills">
  <div class="container">
    <div class="reveal">
      <div class="section-label">{{ t.skills.label }}</div>
      <h2>{{ t.skills.heading }}</h2>
    </div>
    <div class="skills-grid">
      {% for group in sk %}
      <div class="skills-column reveal">
        <h3 class="skills-column-heading">{{ group.tier }}</h3>
        <ul class="skills-list skills-list--{{ group.layout }}">
          {% for item in group.items %}
          <li>{{ item }}</li>
          {% endfor %}
        </ul>
      </div>
      {% endfor %}
    </div>
  </div>
</section>
