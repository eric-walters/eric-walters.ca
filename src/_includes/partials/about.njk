{# About â€” narrative + quick-scan details #}
{% set lang = locale | default("en") %}
{% set t = translations[lang] %}
{% if lang == "fr" %}
  {% set m = meta_fr %}
{% elif lang == "de" %}
  {% set m = meta_de %}
{% else %}
  {% set m = meta %}
{% endif %}
<section class="about container" id="about">
  <div class="reveal">
    <div class="section-label">{{ t.about.label }}</div>
    <h2 class="about-heading">{{ t.about.heading | safe }}</h2>
  </div>
  <div class="about-details reveal">
    <div class="about-detail">
      <span class="about-detail-label">{{ t.about.detail_education_label }}</span>
      <span class="about-detail-value">{{ t.about.detail_education_value }}</span>
      <span class="about-detail-sub">{{ t.about.detail_education_sub }}</span>
    </div>
    <div class="about-detail">
      <span class="about-detail-label">{{ t.about.detail_languages_label }}</span>
      <span class="about-detail-value">{{ t.about.detail_languages_value }}</span>
      <span class="about-detail-sub">{{ t.about.detail_languages_sub }}</span>
    </div>
    <div class="about-detail">
      <span class="about-detail-label">{{ t.about.detail_location_label }}</span>
      <span class="about-detail-value">{{ m.location }}</span>
      <span class="about-detail-sub">{{ t.about.detail_location_sub }}</span>
    </div>
    <div class="about-detail">
      <span class="about-detail-label">{{ t.about.detail_focus_label }}</span>
      <span class="about-detail-value">{{ t.about.detail_focus_value }}</span>
      <span class="about-detail-sub">{{ t.about.detail_focus_sub }}</span>
    </div>
  </div>
  <div class="about-text reveal">
    <p>{{ t.about.paragraph_1 }}</p>
    <p>{{ t.about.paragraph_2 }}</p>
  </div>
  <div class="about-stats reveal">
    {% for stat in t.about.stats %}
    <div class="about-stat">
      <span class="about-stat-number">{{ stat.number }}</span>
      <span class="about-stat-label">{{ stat.label }}</span>
    </div>
    {% endfor %}
  </div>
  <div class="about-extra reveal">
    <p>{{ t.about.paragraph_3 }}</p>
  </div>
</section>
