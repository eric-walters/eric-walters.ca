<!DOCTYPE html>
<html lang="{{ locale or 'en' }}" data-theme="light">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{% block title %}{{ meta.title }}{% endblock %} â€” Mechanical Engineer</title>
  <meta name="description" content="{% block description %}{{ meta.description }}{% endblock %}">

  <!-- Preconnect for fonts -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>

  <!-- CSS -->
  <link rel="stylesheet" href="/assets/css/tokens.css">
  <link rel="stylesheet" href="/assets/css/base.css">
  <link rel="stylesheet" href="/assets/css/components.css">
  <link rel="stylesheet" href="/assets/css/animations.css">

  <!-- Prevent FOUC: apply saved theme before render -->
  <script>
    (function() {
      var t = localStorage.getItem('theme');
      if (t) document.documentElement.dataset.theme = t;
    })();
  </script>
</head>
<body>

  {% include "partials/nav.njk" %}

  <main>
    {% block content %}{% endblock %}
  </main>

  {% include "partials/footer.njk" %}

  <!-- JS -->
  <script src="/assets/js/theme-toggle.js"></script>
  <script src="/assets/js/scroll-reveal.js"></script>
  <script src="/assets/js/lang-toggle.js"></script>
  <script src="/assets/js/mobile-menu.js"></script>
  <script src="/assets/js/experience-toggle.js"></script>

</body>
</html>
